<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost/flowers_order</property>
        <property name="connection.username">root</property>
        <property name="connection.password">0000</property>
        <property name="connection.pool_size">10</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.connection.autocommit">false</property>
        <property name="current_session_context_class">thread</property>
        <mapping class="com.itechart.courses.entity.Phone" />
        <mapping class="com.itechart.courses.entity.OrderHistory" />
        <mapping class="com.itechart.courses.entity.Contact" />
        <mapping class="com.itechart.courses.entity.User" />
        <mapping class="com.itechart.courses.entity.Order" />
        <mapping class="com.itechart.courses.entity.MessageTemplate"/>
    </session-factory>
</hibernate-configuration>